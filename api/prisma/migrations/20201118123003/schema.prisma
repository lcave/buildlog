datasource db {
  provider = "postgresql"
  url = "***"
}

generator client {
  provider = "prisma-client-js"
}

model Link {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  description String
  url         String
  User        User?    @relation(fields: [userId], references: [id])
  userId      Int?
}

model User {
  id       Int    @id @default(autoincrement())
  username String
  email    String
  password String
  links    Link[]
}
